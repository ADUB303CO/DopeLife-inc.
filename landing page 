    <script>
        // Fade in header on load with delay for drama
        window.addEventListener('load', () => {
            setTimeout(() => {
                const header = document.querySelector('header');
                header.classList.add('visible');
            }, 500);

            // Animate hero elements
            setTimeout(() => {
                const hero = document.querySelector('.hero');
                hero.classList.add('visible');
            }, 800);
        });

        // Intersection Observer for scroll animations with thresholds for earlier trigger
        const options = {
            root: null,
            threshold: 0.2,
            rootMargin: '0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');

                    // For benefits and testimonials, animate children sequentially with more delay
                    if (entry.target.classList.contains('benefit-grid')) {
                        const benefits = entry.target.querySelectorAll('.benefit');
                        benefits.forEach((benefit, index) => {
                            setTimeout(() => {
                                benefit.classList.add('visible');
                            }, index * 200); // Reduced stagger for smoother flow
                        });
                    } else if (entry.target.classList.contains('testimonials')) {
                        const testimonials = entry.target.querySelectorAll('.testimonial');
                        testimonials.forEach((testimonial, index) => {
                            setTimeout(() => {
                                testimonial.classList.add('visible');
                            }, index * 200); // Reduced stagger
                        });
                        entry.target.querySelector('h2').classList.add('visible');
                    } else if (entry.target.classList.contains('benefits')) {
                        entry.target.querySelector('h2').classList.add('visible');
                    }

                    observer.unobserve(entry.target);
                }
            });
        }, options);

        // Observe sections
        observer.observe(document.querySelector('.benefits'));
        observer.observe(document.querySelector('.benefit-grid'));
        observer.observe(document.querySelector('.testimonials'));
        observer.observe(document.querySelector('footer'));

        // Simple parallax for hero background with requestAnimationFrame for ultra-smoothness
        let lastScroll = 0;
        const parallax = () => {
            const scrollPosition = window.pageYOffset;
            if (Math.abs(scrollPosition - lastScroll) > 0) { // Only update if changed
                const hero = document.querySelector('.hero');
                hero.style.backgroundPositionY = `${scrollPosition * 0.3}px`;
                lastScroll = scrollPosition;
            }
            requestAnimationFrame(parallax);
        };
        parallax();
    </script>
